{% extends 'base.html.twig' %}
{% block title %}
    {{ 'login.login'|trans }}
{% endblock %}

{% block body %}

    {% if error %}
        {#<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
        <div> error message to trans</div>
    {% endif %}

    <div class="col-xs- 10 col-xs-offset-1 col-md-6 col-md-offset-3 col-lg-3 col-lg-offset-4">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label">{{ 'login.username'|trans }} :</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="password" class="form-label">{{ 'login.password'|trans }} :</label>
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">{{ 'login.login'|trans }}</button>
            </div>
        </form>
    </div>

{% endblock %}